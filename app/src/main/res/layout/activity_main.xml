<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="CALCULATOR"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:hint="Output"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/output"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="Input"
        android:inputType="none"
        android:textSize="70sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="1dp"
            app:columnCount="4"
            app:rowCount="4">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="1"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="2"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="3"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_row="0" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/teal_700"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_row="0" />

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="4"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="5"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="6"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/teal_700"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_row="1" />

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="7"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="8"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="9"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="รท"
                android:textColor="@color/teal_700"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_row="2" />

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/teal_700"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="0"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="ร"
                android:textColor="@color/teal_700"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_row="3" />

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="."
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_row="3" />

        </androidx.gridlayout.widget.GridLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Morpheus Softwares"
        android:textColor="@color/green"
        android:textStyle="italic" />

</RelativeLayout>